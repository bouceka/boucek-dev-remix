// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String    @id @default(auto()) @map("_id") @db.ObjectId
    email    String    @unique
    password String
    projects Project[]
    Blog     Blog[]
}

model Project {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
    slug       String   @unique
    title      String
    createdAt  DateTime @default(now())
    excerpt    String
    githubURL  String?
    websiteURL String?
    coverImage String
    markdown   String
    User       User     @relation(fields: [userId], references: [id])
    userId     String   @db.ObjectId
    updatedAt  DateTime @updatedAt
}

model Blog {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
    slug       String   @unique
    title      String
    markdown   String
    excerpt    String
    coverImage String
    User       User     @relation(fields: [userId], references: [id])
    userId     String   @db.ObjectId
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}
